@using System.Share.ViewModels.LipstickClientViewModels
@model ChangePasswordClientViewModel

<form asp-action="ChangePassword" asp-controller="MyAccount" method="post" onsubmit="return SubmitForm(this,changePassword)">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-2 position-relative">
        <label asp-for="OldPassword" class="control-label text-capitalize">@_localizer["oldPassword"]:</label>
        <input asp-for="OldPassword" type="password" class="form-control" autocomplete="off" />
        <span onclick="showPass('OldPassword','OldPasswordIcon')" id="OldPasswordIcon" class="ti-eye icon-password"></span>
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>
    <div class="form-group mb-2 position-relative">
        <label asp-for="NewPassword" class="control-label text-capitalize">@_localizer["newPassword"]:</label>
        <input asp-for="NewPassword" name="NewPassword" type="password" class="form-control" autocomplete="off" />
        <span onclick="showPass('NewPassword','NewPasswordIcon')" id="NewPasswordIcon" class="ti-eye icon-password"></span>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group mb-4 position-relative">
        <label asp-for="ConfirmPassword" class="control-label text-capitalize">@_localizer["confirmPassword"]:</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="off" />
        <span onclick="showPass('ConfirmPassword','ConfirmPasswordIcon')" id="ConfirmPasswordIcon" class="ti-eye icon-password"></span>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-submit text-capitalize mb-3">@_localizer["submit"]</button>
</form>